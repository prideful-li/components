{
    "compilerOptions": {
        "baseUrl": "src",
        "esModuleInterop": true,
        "jsx": "preserve",
        "lib": [
            "esnext",
            "dom"
        ],
        "module": "esnext",
        "moduleResolution": "node",
        "paths": {
            "@/*": ["./*"]
        },
        "resolveJsonModule": true,
        "strict": true,
        "sourceMap": true,
        "target": "esnext",
        "types": [
            "node",
            "vite/client",
            "vue/ref-macros"
        ]
    },
    "exclude": [
        "dist",
        "node_modules"
    ],
    "include": [
        "src/**/*.ts",
        "src/**/*.d.ts",
        "src/**/*.tsx",
        "src/**/*.vue"
    ]
}
